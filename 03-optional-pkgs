#!/bin/bash

echo "Installing the following optional packages:"

pkgs="solaar neofetch calibre gimp krita gscan2pdf pdfarranger moonshiner inkscape xnconvert handbrake libreoffice-extension-languagetool mathpix-snipping-tool masterpdfeditor-free remmina skypeforlinux-stable-bin teamviewer ttf-ms-fonts electronic-wechat slack-desktop zoom variety youtube-dl-gui-git rhythmbox uxplay"

echo $pkgs

yay -S $pkgs --noconfirm

sudo teamviewer --daemon enable
sudo teamviewer --daemon start
sudo systemctl enable teamviewerd

echo "Installation finished!"
