#!/bin/bash

echo "Installing the following essential packages:"

pkgs="anydesk debtap filezilla mailspring gedit google-chrome brave gufw hardinfo jre nomachine notepadqq plasma5-applets-eventcalendar rar etcher peek pinta krdc dropbox insync graveman k3b furiusisomount gcc-fortran"

echo $pkgs

yay -S $pkgs --noconfirm

# disable brave browser message
sudo sysctl kernel.unprivileged_userns_clone=1
echo kernel.unprivileged_userns_clone = 1 | sudo tee /etc/sysctl.d/00-local-userns.conf

echo "Installation finished!"
