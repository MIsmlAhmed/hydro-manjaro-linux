#!/bin/bash

echo "Installing the following essential packages:"

pkgs="softmaker-office-2021-bin xorg-xkill anydesk-bin filezilla flameshot ksnip obs-studio wavebox gedit gufw hardinfo jre notepadqq plasma5-applets-eventcalendar rar etcher-bin peek pinta kdenlive gcc-fortran rustup zoom icaclient"

echo $pkgs

yay -S $pkgs --noconfirm

echo "Installation finished!"
